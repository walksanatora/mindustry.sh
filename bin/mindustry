#! /usr/bin/env bash
if [[ $1 -eq update ]]
then
   if [[ -e home/$(logname)/.config/mindustry/BE ]]
   then
       mindustry-update-be
   else
       mindustry-update
   fi
   exit
fi

if [[ $1 -eq run ]]
then
   if [[ -e home/$(logname)/.config/mindustry/BE ]]
   then
       mindustry-run-be
   else
       mindustry-run
   fi
   exit
fi

if [[ $1 -eq BE]]
then
   if [[ -e home/$(logname)/.config/mindustry/BE]]
   then
       rm home/$(logname)/.config/mindustry/BE
   else
       echo BE > home/$(logname)/.config/mindustry/BE
   fi
   exit 
fi


